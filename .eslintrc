{
	"parser": "babel-eslint",
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"es6": true,
		"jquery": true
	},
	"parserOptions": {
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"comma-dangle": [
			"warn",
			"never"
		],
		"indent": [
			"warn",
			2,
			{
				"SwitchCase": 1,
				"VariableDeclarator": 1
			}
		],
		"no-tabs": 0,
		"react/prop-types": 0,
		"react/jsx-indent": [
			2,
			"tab"
		],
		"linebreak-style": [
			"warn",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		/* Advanced Rules*/
		"no-unused-expressions": "warn",
		"no-useless-concat": "warn",
		"block-scoped-var": "error",
		"consistent-return": "error"
	}
}