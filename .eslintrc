{
    "extends": [
        "airbnb/base",
        "plugin:react/recommended"
    ],
    "env": {
        "es6": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "allowImportExportEverywhere": true
        }
    },
    "plugins": [
        "jsx-a11y",
        "react"
    ],
    "settings": {
        "react": {
            "version": "15.4.0"
        }
    },
    "parser": "babel-eslint",
    "rules": {
        "comma-dangle": 0,
        "indent": [
            "error",
            4
        ],
        "global-require": 0,
        "no-nested-ternary": 0,
        "no-underscore-dangle": 0,
        "new-cap": [
            "error",
            {
                "capIsNewExceptions": [
                    "Router"
                ]
            }
        ],
        "import/no-self-import": 0,
        "import/no-cycle": 0,
        "import/no-useless-path-segments": 0,
        "import/no-extraneous-dependencies": 0,
        "import/first": 0,
        "no-new": 0,
        "one-var": 0,
        "one-var-declaration-per-line": 0,
        "no-use-before-define": 0,
        "no-param-reassign": 0,
        "object-shorthand": 0,
        "func-names": 0,
        "prefer-arrow-callback": 0,
        "import/no-webpack-loader-syntax": 0,
        "import/no-named-default": 0,

    }
}