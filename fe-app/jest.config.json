{
  "verbose": true,
  "collectCoverage": true,
  "collectCoverageFrom" : [
    "src/api/**/*.js",
    "src/components/**/*.js",
    "src/modules/**/*.js",
    "!**/index.js",
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "cobertura", "html", "text", "text-summary"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 90,
      "branches": 90,
      "functions": 90,
      "lines": 90
    }
  }
}
