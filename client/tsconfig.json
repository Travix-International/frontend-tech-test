{
    "compilerOptions": {
        "baseUrl": "./src/",
        "paths": {
            "@components/*": ["components/*"],
            "@utils/*": ["utils/*"],
            "@services/*": ["services/*"],
            "@models/*": ["models/*"],
            "@store/*": ["store/*"],
            "@containers/*": ["containers/*"],
            "@styles/*": ["styles/*"],
        },
        "outDir": "./dist/",
        "module": "esnext",
        "target": "es6",
        "lib": ["es6", "dom"],
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "rootDir": ".",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,   // needed to work with jest
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "config",
        "public",
        "typings",
        "dist",
    ],
}