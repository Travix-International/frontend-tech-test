{
    "root": true,
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "extends": [
      "travix/base",
      "travix/promises",
      "travix/react"
    ],
    "env": {
      "browser": true,
      "jest": true
    },
    "rules": { 
      "indent": ["error", 4],
      "comma-dangle": ["error", {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
      }],
      "react/jsx-indent": ["error", 4],
      "react/jsx-indent-props": ["error", 4],
      "class-methods-use-this": 0
    }
}
